<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/graywhite"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/realtabcontent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RadioGroup
        android:id="@+id/main_tab_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" 
        android:layout_gravity="bottom"
        android:background="@color/listitem_black">

        <RadioButton
            android:id="@+id/radio_tab_home"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/cs_btn_tab_home"
            android:text="@string/tab_home" />

        <RadioButton
            android:id="@+id/radio_tab_cart"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/cs_btn_tab_cart"
            android:text="@string/tab_cart" />

        <RadioButton
            android:id="@+id/radio_tab_mine"
            style="@style/main_tab_bottom"
            android:drawableTop="@drawable/cs_btn_tab_mine"
            android:text="@string/tab_mine" />

    </RadioGroup>

</LinearLayout>

